{
  "manifest_version": 2,
  "name": "AmazonUY",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon-128.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "https://www.amazon.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.amazon.com/*",
        "https://www.amazon.com/*"
      ],
      "js": [
        "js/jquery-3.1.1.min.js",
        "content.js"
      ],
      "css": [
        "css/amazon.single-item.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "settings.json"
  ]
}
